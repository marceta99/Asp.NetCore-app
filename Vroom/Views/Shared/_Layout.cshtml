@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header class="nav-bar">
        <div>
            <ul class="nav-links">
                <li><a asp-action="Index" asp-controller="Bike">TOPGEAR</a></li>
                <li><a asp-action="Index" asp-controller="Bike">Home</a></li>

                @if (User.IsInRole("Admin") || User.IsInRole("Executive"))
                {
                    <li><a asp-action="Index" asp-controller="Make">Makes</a></li>
                    <li><a asp-action="Index" asp-controller="Model">Models</a></li>
                    <li>
                        <a asp-action="Index" asp-controller="Bike">Vehicles</a>
